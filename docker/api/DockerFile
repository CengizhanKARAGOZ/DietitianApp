FROM mcr.microsoft.com/dotnet/aspnet:9.0 AS base
WORKDIR /app
EXPOSE 8080

FROM mcr.microsoft.com/dotnet/sdk:9.0 AS build
WORKDIR /src

# Copy csproj files and restore
COPY ["src/DietApp.API/DietApp.API.csproj", "DietApp.API/"]
COPY ["src/DietApp.Application/DietApp.Application.csproj", "DietApp.Application/"]
COPY ["src/DietApp.Domain/DietApp.Domain.csproj", "DietApp.Domain/"]
COPY ["src/DietApp.Infrastructure/DietApp.Infrastructure.csproj", "DietApp.Infrastructure/"]
COPY ["Directory.Build.props", "../"]
COPY ["Directory.Packages.props", "../"]

RUN dotnet restore "DietApp.API/DietApp.API.csproj"

# Copy everything and build
COPY src/ .
COPY Directory.Build.props ../
COPY Directory.Packages.props ../

WORKDIR "/src/DietApp.API"
RUN dotnet build "DietApp.API.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "DietApp.API.csproj" -c Release -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "DietApp.API.dll"]